<Window x:Class="CornojoblessCertificateManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CornojoblessCertificateManager.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<DockPanel Margin="10">
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,1">
			
			<ComboBox Width="150" x:Name="StoreCombo">
				<ComboBoxItem Content="CurrentUser"/>
				<ComboBoxItem Content="LocalMachine"/>
			</ComboBox>

			<TextBox x:Name="IssuerBox" Width="300" Margin="10,0,0,0" ToolTip='The issuer name as shown in the "Issued By" column in certmgr/certlm.msc'/>
			<Button Content="List" Margin="10,0,0,0" Click="OnLoad"/>
		</StackPanel>

		<DataGrid x:Name="Grid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Subject" Binding="{Binding Subject}" Width="*"/>
				<DataGridTextColumn Header="Issuer" Binding="{Binding Issuer}" Width="*"/>
				<DataGridTextColumn Header="When it expires" Binding="{Binding Expiration}" Width="150"/>
				<DataGridTextColumn Header="Has private key" Binding="{Binding HasPrivateKey}" Width="120"/>
			</DataGrid.Columns>
		</DataGrid>

		<Button DockPanel.Dock="Bottom" Content="Backup and remove" Height="35" Margin="0,10,0,0" Click="OnRemove"/>
	</DockPanel>
</Window>
